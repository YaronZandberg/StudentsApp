<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentDetailsActivity">

    <ImageView
        android:id="@+id/studentdetails_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar" />

    <CheckBox
        android:id="@+id/studentdetails_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:text="checked"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentdetails_headline_address" />

    <TextView
        android:id="@+id/studentdetails_headline_name"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="name:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/studentdetails_headline_id"
        app:layout_constraintEnd_toStartOf="@+id/studentdetails_value_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentdetails_img" />

    <TextView
        android:id="@+id/studentdetails_headline_id"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="id:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/studentdetails_headline_phone"
        app:layout_constraintEnd_toStartOf="@+id/studentdetails_value_id"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentdetails_headline_name" />

    <TextView
        android:id="@+id/studentdetails_headline_phone"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="phone:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/studentdetails_headline_address"
        app:layout_constraintEnd_toStartOf="@+id/studentdetails_value_phone"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentdetails_headline_id" />

    <TextView
        android:id="@+id/studentdetails_headline_address"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="address:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/studentdetails_checkbox"
        app:layout_constraintEnd_toStartOf="@+id/studentdetails_value_address"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentdetails_headline_phone" />

    <TextView
        android:id="@+id/studentdetails_value_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/studentdetails_headline_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/studentdetails_headline_name"
        app:layout_constraintTop_toTopOf="@+id/studentdetails_headline_name" />

    <TextView
        android:id="@+id/studentdetails_value_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/studentdetails_headline_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/studentdetails_headline_id"
        app:layout_constraintTop_toTopOf="@+id/studentdetails_headline_id" />

    <TextView
        android:id="@+id/studentdetails_value_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/studentdetails_headline_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/studentdetails_headline_phone"
        app:layout_constraintTop_toTopOf="@+id/studentdetails_headline_phone" />

    <TextView
        android:id="@+id/studentdetails_value_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/studentdetails_headline_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/studentdetails_headline_address"
        app:layout_constraintTop_toTopOf="@+id/studentdetails_headline_address" />

    <Button
        android:id="@+id/studentdetails_edit_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        android:text="edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/studentdetails_cancel_btn" />

    <Button
        android:id="@+id/studentdetails_cancel_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="2dp"
        android:text="cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/studentdetails_edit_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>