<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/studentListFragment">

    <fragment
        android:id="@+id/studentListFragment"
        android:name="com.example.studentsapp.fragments.StudentListFragment"
        android:label="Students List"
        tools:layout="@layout/fragment_student_list">
        <action
            android:id="@+id/action_studentListFragment_to_studentDetailsFragment"
            app:destination="@id/studentDetailsFragment" />
        <action
            android:id="@+id/action_studentListFragment_to_studentNewFragment2"
            app:destination="@id/studentNewFragment" />
    </fragment>
    <fragment
        android:id="@+id/studentDetailsFragment"
        android:name="com.example.studentsapp.fragments.StudentDetailsFragment"
        android:label="Student Details"
        tools:layout="@layout/fragment_student_details">
        <argument
            android:name="student_position"
            app:argType="integer" />
        <action
            android:id="@+id/action_studentDetailsFragment_to_studentEditFragment"
            app:destination="@id/studentEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/studentEditFragment"
        android:name="com.example.studentsapp.fragments.StudentEditFragment"
        android:label="Edit Student"
        tools:layout="@layout/fragment_student_edit">
        <argument
            android:name="student_position"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/studentNewFragment"
        android:name="com.example.studentsapp.fragments.StudentNewFragment"
        android:label="New Student"
        tools:layout="@layout/fragment_student_new" />
</navigation>